      @Html.Partial("_Module", Course["Design by Contract"])
    </th>
    <th>
      &nbsp;
    </th>
  </tr>
  <tr>
    <th>
      @Html.Partial("_Module", Course["Case Study"])
    </th>
    <th>
      &nbsp;
    </th>
  </tr>
</table>
<br />
<table border="1">
  @if (Repo.Books.FirstOrDefault(e => e.Category.Contains(Code)) != null) {
    <tr style="background-color: lightcoral;"><th colspan="3">Recommanded Books</th></tr>
    foreach (var book in Repo.Books.FindAll(b => b.Category.Contains(Code))) {
      @Html.Partial("_Book", book);
    }
  }
</table>
<br />
<table border="1">
  <tr>
    <td><h4>Useful Links</h4></td>
    <td>
      <!--
      <ul>
        <li><a target="_blank" href="https://docs.microsoft.com/en-us/learn/certifications/exams/az-204">Exam AZ-204: Developing Solutions for Microsoft Azure</a></li>
