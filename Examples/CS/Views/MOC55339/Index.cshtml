@using CS.Models
@{
  string Code = "MOC55339";
  Course Course = Repo.Courses[Code];
  ViewBag.Title = Course.Title;
}
<table border="1">
  <tr><th colspan="3" style="background-color:darkseagreen"><h1>@ViewBag.Title</h1></th></tr>
  <tr>
    <th>Course Outline</th>
    <td colspan="2">
      <a target="_blank" href="@Url.Content($"~/DOC/{Code}/Outline.docx")">Download</a>
    </td>
  </tr>
  <tr>
    <th>Reading Material</th>
    <td colspan="2">
      <a target="_blank" href="@Url.Content("~/DOC/SE001CS/C Sharp Fundamentals.pdf")">C Sharp Fundamentals.pdf</a><br />
      <a target="_blank" href="@Url.Content($"~/DOC/{Code}/SE001OOT-Introduction Basic Object-Oriented Concepts.docx")">Introduction Basic Object-Oriented Concepts</a>
    </td>
  </tr>

  <tr>
    <th>PowerPoint Slides</th>
    <td colspan="2">

      <a href="@Url.Content($"~/DOC/{Code}/Intro.pptx")">Intro.pptx</a>
    </td>
  </tr>

  <tr style="background-color:darkgoldenrod"><th>Day</th><th>Modules</th><th>Sharing</th></tr>
  <tr>
    <th rowspan="3">1</th>
    <th>
      @Html.Partial("_Module", Course["C# Syntax"])
    </th>
    <th rowspan="3">
      <ul>
        <li><a target="_blank" href="@Url.Content($"~/CODE/{Code}/Day1.zip")">Day1.zip</a></li>
      </ul>
    </th>
  </tr>
  <tr>
    <th>
      @Html.Partial("_Module", Course["C# Language Concepts"])
    </th>
  </tr>
  <tr>
    <th>
      @Html.Partial("_Module", Course["C# Structures, Collections and Events"])
    </th>
  </tr>
  <tr>
    <th rowspan="2">2</th>
    <th>
      @Html.Partial("_Module", Course["C# Classes"])
    </th>
    <th rowspan="2">
      <ul>
        <li><a target="_blank" href="@Url.Content($"~/CODE/{Code}/DataTypeSolution.zip")">DataTypeSolution.zip</a></li>
        <li><a target="_blank" href="@Url.Content($"~/DOC/{Code}/Day2.xlsx")">Day2.xlsx</a></li>
        <li><a target="_blank" href="@Url.Content($"~/DOC/{Code}/OOP.pptx")">OOP.pptx</a></li>
      </ul>
    </th>
  </tr>
  <tr>
    <th>
      @Html.Partial("_Module", Course["C# Inheritance"])
    </th>
  </tr>
  <tr>
    <th rowspan="2">3</th>
    <th>
      @Html.Partial("_Module", Course["Input and Output"])
    </th>
    <th rowspan="2">
      <ul>
        <li><a target="_blank" href="@Url.Content($"~/CODE/{Code}/CollectionSolution.zip")">CollectionSolution.zip</a></li>
        <li><a target="_blank" href="@Url.Content($"~/DOC/{Code}/Day3.xlsx")">Day3.xlsx</a></li>
        <li><a target="_blank" href="@Url.Content($"~/DOC/{Code}/8 Puzzle.zip")">8 Puzzle.xlsm</a></li>
      </ul>
    </th>
  </tr>
  <tr>
    <th>
      @Html.Partial("_Module", Course["Database Access"])
    </th>
  </tr>
  <tr>
    <th rowspan="2">4</th>
    <th>
      @Html.Partial("_Module", Course["Using the Network"])
    </th>
    <th rowspan="2">
      <ul>
        <li><a target="_blank" href="@Url.Content($"~/DOC/{Code}/Day4.xlsx")">Day4.xlsx</a></li>
        <li><a target="_blank" href="@Url.Content($"~/CODE/{Code}/ParameterSolution.zip")">ParameterSolution.zip</a></li>
        <li><a target="_blank" href="@Url.Content($"~/DOC/{Code}/Error Handling.pptx")">Error Handling.pptx</a></li>
        <li><a target="_blank" href="@Url.Content($"~/CODE/{Code}/ExceptionHandlingSolution.zip")">ExceptionHandlingSolution.zip</a></li>
        <li><a target="_blank" href="@Url.Content($"~/CODE/{Code}/FileIO.zip")">FileIO.zip</a></li>
        <li><a target="_blank" href="@Url.Content($"~/CODE/{Code}/DelegateSolution.zip")">DelegateSolution.zip</a></li>
        <li><a target="_blank" href="@Url.Content($"~/CODE/{Code}/Database.zip")">Database.zip</a></li>
        <li><a target="_blank" href="@Url.Content($"~/CODE/{Code}/LINQ Solution.zip")">LINQ Solution.zip</a></li>
      </ul>
    </th>
  </tr>
  <tr>
    <th>
      @Html.Partial("_Module", Course["Graphical User Interfaces"])
    </th>
  </tr>
  <tr>
    <th rowspan="3">5</th>
    <th>
      @Html.Partial("_Module", Course["Application Performance"])
    </th>
    <th rowspan="3">
      <ul>
        <li><a target="_blank" href="@Url.Content($"~/CODE/{Code}/MultiThreading.zip")">MultiThreading.zip</a></li>
        <li><a target="_blank" href="@Url.Content($"~/CODE/{Code}/Attributes.zip")">Attributes.zip</a></li>
      </ul>
    </th>
  </tr>
  <tr>
    <th>
      @Html.Partial("_Module", Course["C# Interop"])
    </th>
  </tr>
  <tr>
    <th>
      @Html.Partial("_Module", Course["Designing for Reuse"])
    </th>
  </tr>
</table>
<br />
<table border="1">
  @if (Repo.Books.FirstOrDefault(e => e.Category.Contains(Code)) != null) {
    <tr style="background-color: lightcoral;"><th colspan="3">Recommanded Books</th></tr>
    foreach (var book in Repo.Books.FindAll(b => b.Category.Contains(Code))) {
      @Html.Partial("_Book", book);
    }
  }
</table>
<br />
<table border="1">
  <tr>
    <td><h4>Useful Links</h4></td>
    <td>
      <!--
      <ul>
        <li><a target="_blank" href="https://docs.microsoft.com/en-us/learn/certifications/exams/az-204">Exam AZ-204: Developing Solutions for Microsoft Azure</a></li>
